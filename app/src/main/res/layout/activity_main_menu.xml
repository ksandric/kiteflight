<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dreamcast.KiteFlightAndroidShvaiba.MainMenu"
    android:background="#e7e7e7">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameMenu1"
        android:layout_marginTop="20dp">

        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewMenuBack"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/menu_back" />

        <ImageView
            android:onClick="onClickSendKite"
            android:clickable="true"
            android:layout_width="130dp"
            android:layout_height="185dp"
            android:id="@+id/imageViewButtonSendKite"
            android:layout_gravity="left|top"
            android:src="@drawable/invisible_button"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="45dp"
            android:adjustViewBounds="false"
            android:alpha="0.01" />

        <ImageView
            android:onClick="onClickOrderHistory"
            android:clickable="true"
            android:layout_width="130dp"
            android:layout_height="185dp"
            android:id="@+id/imageViewButtonOrderHistory"
            android:layout_gravity="left|bottom"
            android:src="@drawable/invisible_button"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="45dp"
            android:adjustViewBounds="false"
            android:alpha="0.01" />

        <ImageView
            android:onClick="onClickCredits"
            android:clickable="true"
            android:layout_width="130dp"
            android:layout_height="185dp"
            android:id="@+id/imageViewButtonCredits"
            android:layout_gravity="left|top"
            android:src="@drawable/invisible_button"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="185dp"
            android:adjustViewBounds="false"
            android:alpha="0.01" />

        <ImageView
            android:onClick="onClickAdressBook"
            android:clickable="true"
            android:layout_width="130dp"
            android:layout_height="185dp"
            android:id="@+id/imageViewButtonAdressBook"
            android:layout_gravity="left|bottom"
            android:src="@drawable/invisible_button"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="185dp"
            android:adjustViewBounds="false"
            android:alpha="0.01" />

    </FrameLayout>

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_above="@+id/frameMenu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUserInfo"
        android:textColor="#ffffff"
        android:text="id0000000"
        android:textSize="10dp"/>

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/vector_circle"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#2196f3"
        android:id="@+id/frameMenu2"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Credit Balance"
            android:id="@+id/textViewYourCreditBalance"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:singleLine="true" />

    </FrameLayout>

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewValueCreditBalance"
        android:textColor="#ffffff"
        android:hint="Value"
        android:layout_above="@+id/textViewUserInfo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
